{
  "name": "@dxos/teamwork",
  "version": "1.0.1-beta.3",
  "private": true,
  "description": "UX",
  "keywords": [],
  "homepage": "https://github.com/dxos/teamwork#readme",
  "bugs": {
    "url": "https://github.com/dxos/teamwork/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dxos/teamwork.git"
  },
  "license": "AGPL-3.0",
  "author": "DXOS.org",
  "workspaces": {
    "packages": [
      "apps/*",
      "pads/*",
      "bots/*",
      "packages/*",
      "models/*"
    ]
  },
  "scripts": {
    "build": "lerna run build",
    "dist": "lerna run dist",
    "clean": "lerna run clean",
    "lint": "lerna run lint -- && yarn run lint:lockfile",
    "lint:fix": "lerna run lint -- --fix && yarn run lint:lockfile",
    "lint:lockfile": "lockfile-lint --path yarn.lock --allowed-hosts yarn npm codeload.github.com --validate-https",
    "sort-package-json": "lerna exec npx sort-package-json",
    "test": "lerna run test --stream",
    "coverage": "istanbul-combine -d coverage -p summary -r lcov pads/**/coverage/coverage-final.json",
    "test:coverage": "lerna run test:coverage",
    "start": "yarn && yarn build && lerna run start --scope '@dxos/teamwork' --stream",
    "playwright": "mocha --require @babel/register ./tests/test-share-party.test.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0-0",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-export-default-from": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@babel/register": "^7.0.0",
    "@dxos/cli": "^1.1.0-beta.0",
    "@dxos/cli-app": "^1.1.0-beta.0",
    "@dxos/cli-wns": "^1.1.0-beta.0",
    "babel-eslint": "^10.0.3",
    "babel-plugin-add-module-exports": "^1.0.4",
    "chai": "^4.2.0",
    "eslint": "^7.5.0",
    "eslint-config-semistandard": "^15.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-local-rules": "^0.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "istanbul-combine": "^0.3.0",
    "lerna": "^3.19.0",
    "lockfile-lint": "^4.3.7",
    "mocha": "^8.1.3",
    "playwright": "^1.4.2"
  }
}
